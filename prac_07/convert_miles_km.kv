BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_value
            text: '34'
            font_size: 48
            size_hint: 3, 1
            on_text: app.calculate_result()
        BoxLayout:
            orientation: 'vertical'
            Button:
                text: 'Up'
                font_size: 32
                on_press: app.handle_increment(1)
            Button:
                text: 'Down'
                font_size: 32
                on_press: app.handle_increment(-1)
